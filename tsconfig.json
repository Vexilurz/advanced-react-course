{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    // позволяет работать с пакетами, которые используют
    // common js как с обычными пакетами с помощью import
    "esModuleInterop": true,
    // позволяет использовать import * as React from... без '* as'
    "allowSyntheticDefaultImports": true
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}